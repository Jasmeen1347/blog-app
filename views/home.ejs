<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blogify - Share Your Stories</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <!-- Hero Section -->
    <div class="hero-section">
      <div class="container">
        <h1 class="display-4 fw-bold mb-4">Welcome to Blogify</h1>
        <p class="lead mb-4">
          Discover amazing stories, share your thoughts, and connect with
          writers worldwide
        </p>
        <% if (!locals.user) { %>
        <a href="/user/signup" class="btn btn-light btn-lg rounded-pill px-4">
          <i class="bi bi-rocket-takeoff me-2"></i>Start Writing Today
        </a>
        <% } %>
      </div>
    </div>

    <div class="container">
      <div class="content-wrapper p-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
          <div>
            <h2 class="fw-bold text-dark mb-2">Latest Stories</h2>
            <p class="text-muted">Explore our community's newest blog posts</p>
          </div>
          <% if (locals.user) { %>
          <a href="/blog/add-blog" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Write New Story
          </a>
          <% } %>
        </div>

        <% if (blogs.length > 0) { %>
        <div class="row g-4">
          <% blogs.forEach(blog => { %>
          <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm">
              <div class="position-relative">
                <img
                  src="<%= blog.coverImageUrl %>"
                  class="card-img-top"
                  alt="<%= blog.title %>"
                  style="height: 200px; object-fit: cover" />
                <div class="position-absolute top-0 end-0 m-3">
                  <span class="badge bg-primary rounded-pill">New</span>
                </div>
              </div>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-bold text-dark mb-3">
                  <%= blog.title %>
                </h5>
                <div class="blog-meta mb-3">
                  <i class="bi bi-person-circle me-1"></i>
                  <small
                    >By <%= blog.createdBy ? blog.createdBy.fullName :
                    'Anonymous' %></small
                  >
                  <span class="mx-2">â€¢</span>
                  <i class="bi bi-calendar3 me-1"></i>
                  <small
                    ><%= new Date(blog.createdAt).toLocaleDateString() %></small
                  >
                </div>
                <div class="mt-auto">
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary w-100">
                    <i class="bi bi-book-open me-2"></i>Read Story
                  </a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <div class="text-center py-5">
          <i class="bi bi-journal-x display-1 text-muted mb-4"></i>
          <h3 class="text-muted mb-3">No stories yet</h3>
          <p class="text-muted mb-4">
            Be the first to share your amazing story with the world!
          </p>
          <% if (locals.user) { %>
          <a href="/blog/add-blog" class="btn btn-primary btn-lg">
            <i class="bi bi-pen me-2"></i>Write First Story
          </a>
          <% } else { %>
          <a href="/user/signup" class="btn btn-primary btn-lg">
            <i class="bi bi-person-plus me-2"></i>Join Blogify
          </a>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>

    <footer class="mt-5 py-4 text-center text-white">
      <div class="container">
        <p class="mb-0">
          &copy; 2024 Blogify. Made with
          <i class="bi bi-heart-fill text-danger"></i> for storytellers
        </p>
      </div>
    </footer>

    <%- include('./partials/scripts') %>
  </body>
</html>
